@* Spendnt.WEB/Layout/NavMenu.razor *@
@using Microsoft.AspNetCore.Components.Authorization
@using Spendnt.WEB.Auth
@inject NavigationManager NavigationManager
@inject ILoginService LoginService



<div class="nav-scrollable-permanent">
   
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="ingresos">
                        <span class="bi bi-arrow-up-circle-fill" aria-hidden="true"></span> Ingresos
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="egresos">
                        <span class="bi bi-arrow-down-circle-fill" aria-hidden="true"></span> Egresos
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="saldo">
                        <span class="bi bi-wallet2" aria-hidden="true"></span> Saldo
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="MetasAhorro">
                        <span class="bi bi-piggy-bank-fill" aria-hidden="true"></span> Metas de Ahorro
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="calendario">
                        <span class="bi bi-calendar-event-fill" aria-hidden="true"></span> Calendario
                    </NavLink>
                </div>

                <hr class="my-2 nav-separator" />

                <div class="nav-item px-3">
                    <button class="btn-logout-style" @onclick="HandleLogout">
                        <span class="bi bi-box-arrow-right" aria-hidden="true"></span>
                        Cerrar Sesión (@context.User.Identity?.Name)
                    </button>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="login">
                        <span class="bi bi-box-arrow-in-right" aria-hidden="true"></span> Iniciar Sesión
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="register">
                        <span class="bi bi-person-plus-fill" aria-hidden="true"></span> Registrarse
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
  

    private async Task HandleLogout()
    {
        await LoginService.LogoutAsync();
        NavigationManager.NavigateTo("/");
    }
}